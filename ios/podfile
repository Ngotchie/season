# ios/Podfile

platform :ios, '14.0'             # iOS min 14.0 (exig√© par plusieurs plugins r√©cents)
inhibit_all_warnings!             # optionnel : cache les warnings pods
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Indique √† CocoaPods le projet Xcode √† int√©grer
project 'Runner', {
  'Debug'   => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# R√©cup√®re le chemin Flutter depuis ios/Flutter/Generated.xcconfig
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "Generated.xcconfig must exist. Run `flutter pub get` first."
  end
  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in Generated.xcconfig"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

# Pr√©pare le contexte CocoaPods pour Flutter
flutter_ios_podfile_setup

target 'Runner' do
  # Requis par de nombreux plugins (Stripe, Google Maps, etc.)
  use_frameworks! :linkage => :static
  use_modular_headers!

  # üîß Patch : forcer PhoneNumberKit en 3.x (API 'PhoneNumberKit' utilis√©e par libphonenumber_plugin)
  pod 'PhoneNumberKit', '~> 3.8'

  # Installe tous les pods d√©clar√©s par les plugins Flutter
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# Hooks de post-installation
post_install do |installer|
  # Force l‚ÄôiOS min √† 14.0 pour tous les targets (Runner + Pods)
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      # Optionnel : assure une version Swift raisonnable si n√©cessaire
      # config.build_settings['SWIFT_VERSION'] = '5.0'
    end
    # R√©glages additionnels Flutter (bitcode, etc.)
    flutter_additional_ios_build_settings(target)
  end
end
